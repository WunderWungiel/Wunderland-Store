services:
  app:
    build: .
    container_name: wunderland
    restart: unless-stopped
    volumes:
      - ./Ovi:/app/static/content # Replace
    networks:
      - server
    depends_on:
      - db

  db:
    image: postgres
    container_name: wunderland-db
    networks:
      - server
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    restart: unless-stopped
    volumes:
      - ./postgres-config:/var/lib/postgresql/data
      - ./db/init-db.sh:/docker-entrypoint-initdb.d/init-db.sh
      - ./db/database.psql:/docker-entrypoint-initdb.d/database.psql

networks:
  server:
    external: true

